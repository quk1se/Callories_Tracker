    </Window.Resources>
    <Grid x:Name="MainAPPGrid">
        <Grid x:Name="MainPanelGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Rectangle x:Name="panel_rect" Fill="FloralWhite" Height="50" Grid.ColumnSpan="7" VerticalAlignment="Bottom" Stroke="DarkOliveGreen" StrokeThickness="3"></Rectangle>
            
            <Button x:Name="profile_btn" Grid.Column="5" Style="{StaticResource LightPanelButton}" Click="profile_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="D:/Prog_profile/Callories_Tracker/AppStyle/panel_avatar_icn.jpg"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="profile_rect" Grid.Column="5" Style="{StaticResource LightPanelRect}" VerticalAlignment="Bottom"></Rectangle>
            
            <Button x:Name="target_btn" Grid.Column="3" Style="{StaticResource LightPanelButton}" Click="target_btn_Click">
                <Button.Background>
                    <ImageBrush ImageSource="D:/Prog_profile/Callories_Tracker/AppStyle/target.jpg" Stretch="UniformToFill"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="target_rect" Grid.Column="3" Style="{StaticResource LightPanelRect}" VerticalAlignment="Bottom"></Rectangle>
            
            <Button x:Name="options_btn" Grid.Column="6"  Style="{StaticResource LightPanelButton}" VerticalAlignment="Bottom" Click="options_btn_Click">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="D:/Prog_profile/Callories_Tracker/AppStyle/options.jpg"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="options_rect" Grid.Column="6" Style="{StaticResource LightPanelRect}" VerticalAlignment="Bottom"></Rectangle>
            
            <Button x:Name="daily_advice_btn" Grid.Column="2" Style="{StaticResource LightPanelButton}" Click="daily_advice_btn_Click">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="D:/Prog_profile/Callories_Tracker/AppStyle/advice.jpg"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="daily_advice_rect" Grid.Column="2" Style="{StaticResource LightPanelRect}"></Rectangle>
            <Button x:Name="achievement_btn" Grid.Column="4" Style="{StaticResource LightPanelButton}" Click="achievement_btn_Click">
                <Button.Background>
                    <ImageBrush Stretch="UniformToFill" ImageSource="D:/Prog_profile/Callories_Tracker/AppStyle/achievement.jpg"/>
                </Button.Background>
            </Button>
            <Rectangle x:Name="achievement_rect" Grid.Column="4" Style="{StaticResource LightPanelRect}"/>
        </Grid>
        <Grid x:Name="ProfileGrid" Visibility="Visible">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Image x:Name="your_avatar" Width="180" Height="180" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3" Source="D:/Prog_profile/Callories_Tracker/AppStyle/no_avatar.jpg"></Image>
            <Rectangle x:Name="avatar_rectangle" Fill="Transparent" Style="{StaticResource ProfileRectangleLight}" Width="190" Height="190" RadiusX="10" RadiusY="10" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="3"/>
            <Label x:Name="your_name_field" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom" Grid.ColumnSpan="4" Foreground="DarkOliveGreen" FontSize="25" FontWeight="Bold" FontFamily="Verdana" Margin="0,5,0,0">Kalyan Oleksandr</Label>
            <oxy:PlotView x:Name="WeightDiagram" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="6" Grid.RowSpan="4" Margin="10,10,10,10" Background="FloralWhite" Visibility="Visible"/>
            <oxy:PlotView x:Name="CircleDiagram" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="6" Grid.RowSpan="4" Margin="10,10,10,10" Background="FloralWhite" Visibility="Hidden"/>
            <Rectangle x:Name="diagrams_rect" Grid.Row="3" Grid.ColumnSpan="6" Grid.RowSpan="4" Margin="7,5,7,5" Fill="Transparent" Style="{StaticResource ProfileRectangleLight}"></Rectangle>
            <Button x:Name="weight_diagram_btn" Grid.ColumnSpan="2" Grid.Row="7" Style="{StaticResource LightDiagramButtonStyle}" Click="weight_diagram_btn_Click">Weight progress</Button>
            <Button x:Name="circle_diagram_btn" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="7" Style="{StaticResource LightDiagramButtonStyle}" Click="circle_diagram_btn_Click">Food components</Button>
            <Button x:Name="account_parameters_btn" Grid.Row="7" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource LightDiagramButtonStyle}" Click="account_parameters_btn_Click">Your parameters</Button>
        </Grid>
        <!--===========================================================================================-->
        <Grid x:Name="HumanParametersGrid" Visibility="Visible" Height="356" Width="555" Margin="0 190 0 0" ShowGridLines="True" Background="FloralWhite">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                
            </Grid.RowDefinitions>
            <Label Content="Live parameters" Style="{StaticResource ParameterLabel }" 
                   HorizontalAlignment="Center" Grid.ColumnSpan="2"/>
            <Label Content="Weight" Style="{StaticResource ParameterLabel }" Grid.Row="1" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Label Content="68" Style="{StaticResource ParameterLabel }" Grid.Column="1" 
