            <Label Content="Height" Style="{StaticResource ParameterLabel }" Grid.Row="3" 
                   HorizontalAlignment="Left" VerticalAlignment="Center" />
            <Label Content="172" Style="{StaticResource ParameterLabel }" Grid.Column="1" 
                   Grid.Row="3" x:Name="parameters_height"/>

        </Grid>
        
